{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://peertube-browser.local/schemas/task-execution-pipeline.json",
  "title": "Workflow Task Execution Pipeline",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "execution_sequence",
    "functional_blocks",
    "overlaps"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "execution_sequence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "tasks"
        ],
        "properties": {
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "functional_blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "tasks",
          "scope",
          "outcome"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "scope": {
            "type": "string",
            "minLength": 1
          },
          "outcome": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "overlaps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "left",
          "right",
          "description"
        ],
        "properties": {
          "left": {
            "type": "string",
            "minLength": 1
          },
          "right": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
